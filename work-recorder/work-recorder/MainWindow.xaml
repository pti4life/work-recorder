<Window x:Class="work_recorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:work_recorder"
        mc:Ignorable="d"
        Title="Fő ablak" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Munkák" Margin="15" FontWeight="Bold"/>

        <ListBox Grid.Row="1" x:Name="worksListBox" Margin="15, 0, 15 15" SelectionMode="Single" SelectionChanged="WorksListBox_SelectionChanged"/>

        <Button Grid.Row="2" x:Name="addWorkButton" Content="Munka hozzáadása" Width="150" HorizontalAlignment="Right" Margin="15, 0, 15, 15" Click="AddWorkButton_Click"/>
    </Grid>
        
</Window>
